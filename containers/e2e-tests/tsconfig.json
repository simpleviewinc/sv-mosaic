{
	"compilerOptions": {
		"jsx": "react",
		"lib": [
			"ES2019",
			"DOM"
		],
		"module": "Node16",
		"moduleResolution": "node16",
		"resolveJsonModule": true,
		"baseUrl": "./",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"rootDirs": [
			"."
		]
	},
	"include": [
		"./pages/**/*",
		"./tests/**/*",
		"./fixtures.ts",
	],
	"exclude": [
		"node_modules"
	]
}
